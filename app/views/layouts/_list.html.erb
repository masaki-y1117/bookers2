<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpeg", size: "100x100" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<div class="row">
  <% if user == current_user %>
    <%= link_to "button", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
  <% else %>
    <%= link_to "button", user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model:book, url:books_path, local:true do |f| %>
  <p>TItle</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>