<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: "text-white" %>
            <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li><%= link_to "Home", user_path(current_user), class: "text-white" %></li>
              <li><%= link_to "Users", users_path, class: "text-white" %></li>
              <li><%= link_to "Books", books_path, class: "text-white" %></li>
              <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "text-white" %></li>
            </ul>
            <% else %>
            <ul class="navbar-nav">
              <li><%= link_to "Home", root_path, class: "text-white" %></li>
              <li><%= link_to "About", about_path, class: "text-white" %></li>
              <li><%= link_to "sign up", new_user_registration_path, class: "text-white" %></li>
              <li><%= link_to "login", new_user_session_path, class: "text-white" %></li>
            </ul>
            <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
