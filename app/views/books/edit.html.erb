<%= render 'layouts/error_messages', model: @book %>
<div class="container">
  <div class="row">
    <div class="col">
      <h2>Editing Book</h2>
      <%= form_with model:@book, url:book_path(@book), method: :patch, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>