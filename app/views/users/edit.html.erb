<div class="container">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <%= form_with model:@user, url:user_path(@user), method: :patch, local:true do |f| %>
        <p>Name</p>
        <%= f.text_field :name %>
        <p>Image</p>
        <%= f.attachment_field :profile_image %>
        <p>Introduction</p>
        <%= f.text_area :introduction %>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>